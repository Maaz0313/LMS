<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0", shrink-to-fit="no">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!--====== Title ======-->
    <title>Edubin - LMS Template</title>

    <!--====== Favicon Icon ======-->
    <link rel="shortcut icon" href="~/Content/images/favicon.png" type="image/png">
    <!--====== Slick css ======-->
    <link rel="stylesheet" href="~/Content/css/slick.css">
    <!--====== Animate css ======-->
    <link rel="stylesheet" href="~/Content/css/animate.css">

    <!--====== Nice Select css ======-->
    <link rel="stylesheet" href="~/Content/css/nice-select.css">

    <!--====== Nice Number css ======-->
    <link rel="stylesheet" href="~/Content/css/jquery.nice-number.min.css">
    <!--====== Magnific Popup css ======-->
    <link rel="stylesheet" href="~/Content/css/magnific-popup.css">
    <!--====== Bootstrap css ======-->
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">

    <!--====== Fontawesome css ======-->
    <link rel="stylesheet" href="~/Content/css/font-awesome.min.css">

    <!--====== Default css ======-->
    <link rel="stylesheet" href="~/Content/css/default.css">

    <!--====== Style css ======-->
    <link rel="stylesheet" href="~/Content/css/style.css">

    <!--====== Responsive css ======-->
    <link rel="stylesheet" href="~/Content/css/responsive.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!--====== PRELOADER PART START ======-->

    <div class="preloader">
        <div class="loader rubix-cube">
            <div class="layer layer-1"></div>
            <div class="layer layer-2"></div>
            <div class="layer layer-3 color-1"></div>
            <div class="layer layer-4"></div>
            <div class="layer layer-5"></div>
            <div class="layer layer-6"></div>
            <div class="layer layer-7"></div>
            <div class="layer layer-8"></div>
        </div>
    </div>

    <!--====== PRELOADER PART START ======-->
    <!--====== HEADER PART START ======-->

    <header id="header-part">

        <div class="header-top d-none d-lg-block"> <!-- header top -->
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="header-contact text-lg-left text-center">
                            <ul>
                                <li><img src="~/Content/images/all-icon/map.png" alt="icon"><span>127/5 Mark street, New york</span></li>
                                <li><img src="~/Content/images/all-icon/email.png" alt="icon"><span>info@yourmail.com</span></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="header-opening-time text-lg-right text-center">
                            <p>Opening Hours : Monday to Saturay - 8 Am to 5 Pm</p>
                        </div>
                    </div>
                </div> <!-- row -->
            </div> <!-- container -->
        </div> <!-- header top -->

        <div class="header-logo-support pt-30 pb-30"> <!-- header logo support -->
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-4">
                        <div class="logo">
                            <a href="@Url.Action("Index","Home")">
                                <img src="~/Content/images/logo.png" alt="Logo">
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-8 col-md-8">
                        <div class="support-button float-right d-none d-md-block">
                            <div class="support float-left">
                                <div class="icon">
                                    <img src="~/Content/images/all-icon/support.png" alt="icon">
                                </div>
                                <div class="cont">
                                    <p>Need Help? call us free</p>
                                    <span>321 325 5678</span>
                                </div>
                            </div>
                            <div class="button float-left">
                                @Html.ActionLink("Apply Now", "Signup", "Accounts", new { area = "" }, new { @class = "main-btn" })
                            </div>
                        </div>
                    </div>
                </div> <!-- row -->
            </div> <!-- container -->
        </div> <!-- header logo support -->

        <div class="navigation"> <!-- /*bootstrap's*/ class = "navigation" -->
                <div class="row">
                    <div class="col-lg-10 col-md-10 col-sm-9 col-8">
                        <nav class="navbar navbar-expand-lg">
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                                <ul class="navbar-nav mr-auto">
                                    <li class="nav-item">
                                        <a class="active" href="@Url.Action("Index", "Home")">Home</a>  @*First page*@
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("About", "Home")">About us</a> @*Second page*@
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("Courses","Home")">Courses</a> @*Third page*@
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("Events","Home")">Events</a> @*Fourth page*@
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("Teachers","Home")">Our Teachers</a> @*Fifth page*@
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("Contact", "Home")">Contact</a> @*Sixth page*@
                                    </li>

                                </ul>
                                <ul class="navbar-nav mr-auto">
                                    <li class="nav-item">
                                        @Html.ActionLink("Employee Portal", "Index", "Employees", new { area = "" }, new { @class = "navbar-brand" })
                                    </li>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <li class="nav-item">@Html.ActionLink("Get List", "Index", "Employees")</li>
                                        if (User.IsInRole("Admin") || User.IsInRole("User"))
                                        {
                                            <li class="nav-item">@Html.ActionLink("Create", "Create", "Employees")</li>
                                        }
                                        <li class="nav-item"><a>Hello - @User.Identity.Name</a></li>
                                        <li class="nav-item">@Html.ActionLink("Logout", "Logout", "Accounts")</li>
                                    }
                                    else
                                    {
                                        <li class="nav-item">@Html.ActionLink("Login", "Login", "Accounts")</li>
                                    }
                                </ul>
                            </div>
                        </nav> <!-- nav -->
                        <nav>
                            
                        </nav> <!-- nav -->
                    </div>
                </div> <!-- row -->
        </div> <!-- /*bootstrap's*/ class = "navigation" -->

    </header>

    <!--====== HEADER PART ENDS ======-->
    <div class="container body-content">
        @RenderBody()
        <hr />
        @*<footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@
        <!--====== FOOTER PART START ======-->

        <footer id="footer-part">
            <div class="footer-top pt-40 pb-70">
                    <div class="row">
                        <div class="col-lg-3 col-md-6">
                            <div class="footer-about mt-40">
                                <div class="logo">
                                    <a href="#"><img src="~/Content/images/logo-2.png" alt="Logo"></a>
                                </div>
                                <p>Gravida nibh vel velit auctor aliquetn quibibendum auci elit cons equat ipsutis sem nibh id elit. Duis sed odio sit amet nibh vulputate.</p>
                                <ul class="mt-20">
                                    <li><a href="#"><i class="fa fa-facebook-f"></i></a></li>
                                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                    <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                                </ul>
                            </div> <!-- footer about -->
                        </div>
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="footer-link mt-40">
                                <div class="footer-title pb-25">
                                    <h6>Sitemap</h6>
                                </div>
                                <ul>
                                    <li><a href="@Url.Action("Index","Home")"><i class="fa fa-angle-right"></i>Home</a></li>
                                    <li><a href="@Url.Action("About","Home")"><i class="fa fa-angle-right"></i>About Us</a></li>
                                    <li><a href="@Url.Action("Courses","Home")"><i class="fa fa-angle-right"></i>Courses</a></li>
                                    <li><a href="@Url.Action("Events","Home")"><i class="fa fa-angle-right"></i>Events</a></li>
                                </ul>
                                <ul>
                                    <li><a href="#"><i class="fa fa-angle-right"></i>Gallery</a></li>
                                    <li><a href="shop.html"><i class="fa fa-angle-right"></i>Shop</a></li>
                                    <li><a href="teachers.html"><i class="fa fa-angle-right"></i>Teachers</a></li>
                                    <li><a href="#"><i class="fa fa-angle-right"></i>Support</a></li>
                                    <li><a href="contact.html"><i class="fa fa-angle-right"></i>Contact</a></li>
                                </ul>
                            </div> <!-- footer link -->
                        </div>
                        <div class="col-lg-2 col-md-6 col-sm-6">
                            <div class="footer-link support mt-40">
                                <div class="footer-title pb-25">
                                    <h6>Support</h6>
                                </div>
                                <ul>
                                    <li><a href="#"><i class="fa fa-angle-right"></i>FAQS</a></li>
                                    <li><a href="#"><i class="fa fa-angle-right"></i>Privacy</a></li>
                                    <li><a href="#"><i class="fa fa-angle-right"></i>Policy</a></li>
                                    <li><a href="#"><i class="fa fa-angle-right"></i>Support</a></li>
                                    <li><a href="#"><i class="fa fa-angle-right"></i>Documentation</a></li>
                                </ul>
                            </div> <!-- support -->
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="footer-address mt-40">
                                <div class="footer-title pb-25">
                                    <h6>Contact Us</h6>
                                </div>
                                <ul>
                                    <li>
                                        <div class="icon">
                                            <i class="fa fa-home"></i>
                                        </div>
                                        <div class="cont">
                                            <p>143 castle road 517 district, kiyev port south Canada</p>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="icon">
                                            <i class="fa fa-phone"></i>
                                        </div>
                                        <div class="cont">
                                            <p>+3 123 456 789</p>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="icon">
                                            <i class="fa fa-envelope-o"></i>
                                        </div>
                                        <div class="cont">
                                            <p>info@yourmail.com</p>
                                        </div>
                                    </li>
                                </ul>
                            </div> <!-- footer address -->
                        </div>
                    </div> <!-- row -->
            </div> <!-- footer top -->

            <div class="footer-copyright pt-10 pb-25">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="copyright text-md-left text-center pt-15">
                                <p><a target="_blank" href="https://www.templateshub.net">Templates Hub</a> </p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-md-right text-center pt-15">
                                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                            </div>
                        </div>
                    </div> <!-- row -->
            </div> <!-- footer copyright -->
        </footer>

        <!--====== FOOTER PART ENDS ======-->
        <!--====== BACK TO TOP PART START ======-->

        <a href="#" class="back-to-top"><i class="fa fa-angle-up"></i></a>

        <!--====== BACK TO TOP PART ENDS ======-->
    </div>
    <!--====== jquery js ======-->
    <script src="~/Content/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="~/Content/js/vendor/jquery-1.12.4.min.js"></script>
    <!--====== Bootstrap js ======-->
    <script src="~/Content/js/bootstrap.min.js"></script>

    <!--====== Slick js ======-->
    <script src="~/Content/js/slick.min.js"></script>

    <!--====== Magnific Popup js ======-->
    <script src="~/Content/js/jquery.magnific-popup.min.js"></script>

    <!--====== Counter Up js ======-->
    <script src="~/Content/js/waypoints.min.js"></script>
    <script src="~/Content/js/jquery.counterup.min.js"></script>

    <!--====== Nice Select js ======-->
    <script src="~/Content/js/jquery.nice-select.min.js"></script>

    <!--====== Nice Number js ======-->
    <script src="~/Content/js/jquery.nice-number.min.js"></script>

    <!--====== Count Down js ======-->
    <script src="~/Content/js/jquery.countdown.min.js"></script>

    <!--====== Validator js ======-->
    <script src="~/Content/js/validator.min.js"></script>

    <!--====== Ajax Contact js ======-->
    <script src="~/Content/js/ajax-contact.js"></script>

    <!--====== Main js ======-->
    <script src="~/Content/js/main.js"></script>

    <!--====== Map js ======--> <!--Do Not Use It-->
    @*<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDC3Ip9iVC0nIxC6V14CKLQ1HZNF_65qEQ"></script>
    <script src="~/Content/js/map-script.js"></script>*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
